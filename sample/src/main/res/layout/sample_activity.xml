<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/common_spaces_double">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spaces"
            android:layout_marginBottom="@dimen/common_spaces_double"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo_big" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show material progress"
            android:textColor="@color/sd_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/progress_dialog"
            style="@style/dialog_btn.confirm"
            android:layout_margin="@dimen/common_spaces"
            android:text="Try me!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A basic message"
            android:textColor="@color/sd_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/basic_test"
            style="@style/dialog_btn.confirm"
            android:layout_margin="@dimen/common_spaces"
            android:text="Try me!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spaces_double"
            android:text="A title with a text under"
            android:textColor="@color/sd_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/under_text_test"
            style="@style/dialog_btn.confirm"
            android:layout_margin="@dimen/common_spaces"
            android:text="Try me!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spaces_double"
            android:text="show error message"
            android:textColor="@color/sd_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/error_text_test"
            style="@style/dialog_btn.confirm"
            android:layout_margin="@dimen/common_spaces"
            android:text="Try me!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spaces_double"
            android:text="A success message"
            android:textColor="@color/sd_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/success_text_test"
            style="@style/dialog_btn.confirm"
            android:layout_margin="@dimen/common_spaces"
            android:text="Try me!" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spaces_double"
            android:gravity="center"
            android:text="A warning message, with a listener bind to the Confirm-button..."
            android:textAlignment="center"
            android:textColor="@color/sd_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/warning_confirm_test"
            style="@style/dialog_btn.confirm"
            android:layout_margin="@dimen/common_spaces"
            android:text="Try me!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spaces_double"
            android:gravity="center"
            android:text="A warning message, with listeners bind to Cancel and Confirm button..."
            android:textAlignment="center"
            android:textColor="@color/sd_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/warning_cancel_test"
            style="@style/dialog_btn.confirm"
            android:layout_margin="@dimen/common_spaces"
            android:text="Try me!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_spaces_double"
            android:gravity="center"
            android:text="A message with a custom icon"
            android:textAlignment="center"
            android:textColor="@color/sd_text_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/custom_img_test"
            style="@style/dialog_btn.confirm"
            android:layout_margin="@dimen/common_spaces"
            android:text="Try me!" />

    </LinearLayout>
</ScrollView>

